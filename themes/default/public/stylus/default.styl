::-webkit-scrollbar
  z-index 30
  width 10px
  height 0
  y-index hidden

::-webkit-scrollbar-track
  background-color #111
  border-radius 0
  box-shadow none
  border 0

::-webkit-scrollbar-thumb
  background-color #2b2e33
  border-radius 0
  box-shadow none
  border 0
  &:hover
    background-color transparent
	
.alert-success 
    color: #8BC34A
    background-color: #443e40
    border-color: #d6e9c6
    border-radius: 0
    box-shadow: 100% blue
    z-index: 999999
    position: fixed
    bottom: 0
    opacity: .8

.blur
  position absolute
  left 50%
  top 50%
  margin-top -50px
  margin-left -180px
  color rgba(0, 0, 0, 0)
  font-family Helvetica
  font-size 100px
  text-shadow 0 0 20px rgba(0,0,0,1)
  transition-duration 0.6s
  &:hover
    color rgba(0, 0, 0, 0)
    font-size 100px
    text-shadow 0 0 0px rgba(0,0,0,1)
    transition-duration 0.5s
    cursor pointer

